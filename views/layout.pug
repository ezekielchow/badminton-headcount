doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    block styles
  body
    main(class="container")
      include top-nav.pug
      div(style="width:100vw; display:flex; flex-direction:column; align-items:center")
        div(style="color:red;padding:5px;") #{messageFailure}
        div(style="color:green;padding:5px;") #{messageSuccess}
        div(style="color:red;padding:5px;") 
          ul
            each error in validationFailure
              li= error
      block content
